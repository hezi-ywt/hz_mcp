# API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
OPENAI_MODEL=gemini-3-flash-preview
IMAGE_MODEL=gemini-3-pro-image-preview

# Server Configuration
PORT=8000
TRANSPORT=http

# Authentication (Bearer Token)
# Set to true to enable authentication, false to disable
AUTH_ENABLED=false
# Your secret bearer token (change this to a secure random string)
BEARER_TOKEN=your-secret-token-here

# Cloudflare R2 Storage Configuration
# Leave empty to use base64 encoding instead of R2 upload
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
# Optional: Custom domain for R2 bucket (e.g., https://images.yourdomain.com)
# If not set, will use default R2.dev domain
R2_PUBLIC_DOMAIN=
